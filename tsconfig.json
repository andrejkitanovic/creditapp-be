{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {
			"helpers/*": ["helpers/*"],
			"routes/*": ["routes/*"],
			"models/*": ["models/*"],
			"controllers/*": ["controllers/*"],
			"middleware/*": ["middleware/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", ".vscode"]
}
